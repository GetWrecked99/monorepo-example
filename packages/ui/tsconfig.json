{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
"jsx": "react-jsx",

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,

    "outDir": "dist",
    "rootDir": "src",

    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2020",

    "strict": true,
    "skipLibCheck": true,

    "types": ["react", "react-dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
